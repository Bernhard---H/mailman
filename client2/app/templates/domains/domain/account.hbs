<form>
  <div class="form-group">
    <label for="username">Username</label>
    <div class="input-group">
      <Input @type="text" class="form-control" id="username" @value={{this.model.account.username}}/>
      <div class="input-group-append">
        <span class="input-group-text">@{{this.model.domain}}</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <Input @type="password" class="form-control" id="password" placeholder="Leave empty to keep current password"/>
  </div>
  <div class="form-group">
    <label for="quota">Quota</label>
    <div class="input-group">
      <Input @type="number" class="form-control" id="quota" aria-describedby="quotaUnit" @value={{this.model.account.quota}}/>
      <div class="input-group-append">
        <span class="input-group-text" id="quotaUnit">MiB</span>
      </div>
    </div>
  </div>
  <div class="custom-control custom-switch my-3">
    <Input type="checkbox" class="custom-control-input" id="sendonly" @checked={{this.model.account.sendonly}}/>
    <label class="custom-control-label" for="sendonly">Send-Only</label>
  </div>
  <div class="custom-control custom-switch my-3">
    <Input type="checkbox" class="custom-control-input" id="accountEnabled" @checked={{this.model.account.enabled}}/>
    <label class="custom-control-label" for="accountEnabled">Account Enabled</label>
  </div>
  <div class="text-right">
    <button type="submit" class="btn btn-primary btn-lg">Save</button>
  </div>
</form>